{% schema %}
{
  "name": "Page manager",
  "settings": [
    {
      "type": "header",
      "content": "Heading Font",
      "info": "Used to change heading font typography"
    },
    {
      "type": "checkbox",
      "id": "toggle_head_font",
      "label": "Use custom font?",
      "default": false
    },
    {
      "type": "font_picker",
      "id": "header_font",
      "label": "Font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "head_font_size",
      "label": "Font Size",
      "unit": "px",
      "min": 12,
      "max": 42,
      "step": 1,
      "default": 35
    },
    {
      "type": "header",
      "content": "Primary font",
      "info": "Used to change primary font typography"
    },
    {
      "type": "checkbox",
      "id": "toggle_primary_font",
      "label": "Use custom font?",
      "default": false
    },
    {
      "type": "font_picker",
      "id": "primary_font",
      "label": "Font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "prim_font_size",
      "label": "Font Size",
      "unit": "px",
      "min": 12,
      "max": 22,
      "step": 1,
      "default": 16
    }
  ]
}
{% endschema %}