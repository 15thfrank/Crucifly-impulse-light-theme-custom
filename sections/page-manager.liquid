    --colorTextBody: #ffffff !important;
    --colorPrice: #d1ba98 !important;
    --colorTextSavings: #b30000 !important;
    --colorSaleTag: #990000 !important;
    --colorSaleTagText: #ffffff !important;
    --colorBody: #333333 !important;
    --colorBodyDim: #262626 !important;
    --colorFooter: #e5e5e5 !important;
    --colorFooterText: #333333 !important;
    --colorBorder: #2b2a27 !important;
    --colorNav: #282828 !important;
    --colorNavText: #ffffff !important;
    --colorAnnouncement: #cf2424 !important;
    --colorAnnouncementText: #ffffff !important;
    --colorHeroText: #ffffff !important;
