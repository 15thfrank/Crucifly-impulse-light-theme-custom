{%- if section.settings.toggle_head_font == true -%}
  {% assign headfont = section.settings.header_font.family %}
  {% assign fontfallback = section.settings.header_font.fallback_families %}
  {% assign fontweight = section.settings.header_font.weight %}
  {% assign fontsize = section.settings.head_font_size %}
{%- else -%}
  {% assign headfont = "Tiemann" %}
  {% assign fontfallback = "serif" %}
  {% assign fontweight = 400 %}
  {% assign fontsize = "35" %}
{%- endif -%}

{%- if section.settings.toggle_primary_font == true -%}
  {% assign primfont = section.settings.primary_font.family %}
  {% assign pfontfallback = section.settings.primary_font.fallback_families %}
  {% assign pfontsize = section.settings.prim_font_size %}
  {% assign pfontweight = section.settings.primary_font.weight %}
{%- else -%}
  {% assign primfont = "Futura" %}
  {% assign pfontfallback = "sans-serif" %}
  {% assign pfontsize = "16"%}
  {% assign pfontweight = 400 %}
{%- endif -%}



<style>
  .js-modal-close {color:#fff !important;}

  :root {
    --typeHeaderPrimary: {{headfont}} !important;
    --typeHeaderFallback: {{fontfallback}} !important;
    --typeHeaderSize: {{fontsize}}px;
    --typeHeaderWeight: {{fontweight}};
    --typeHeaderLineHeight: 1;
    --typeHeaderSpacing: 0.0em;
    --typeBasePrimary:  {{primfont}} !important;
    --typeBaseFallback: {{pfontfallback}} !important;
    --typeBaseSize: {{pfontsize}}px;
    --typeBaseWeight: {{pfontweight}};
    --typeBaseSpacing: 0.025em;
    --typeBaseLineHeight: 1.6;
    --typeCollectionTitle: 18px;
    --iconWeight: 2px;
    --iconLinecaps: miter;
    --buttonRadius: 0px;
    --colorGridOverlayOpacity: 0.1;
  }

  :root {
    --colorBtnPrimary: #cf2424 !important;
    --colorBtnPrimaryLight: #df4747 !important;
